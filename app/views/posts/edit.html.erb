<h1>Edit Post</h1>

<%= form_for :post, url: post_path(@post), method: :patch do |form|%>
<%= form.label :message %>
  <%= form.text_field :message, placeholder: "message" %>
  <div class="field">
    <%= form.label :image %><br />
    <%= form.file_field :image %><br>
  </div>

  <%= form.submit "Submit" %>

<%end%>