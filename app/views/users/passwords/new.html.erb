<br><div class="edit-body"><h2>Forgot your password?</h2>

  <div class="edit-block"><%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "form-label"  %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-text"  %>
  </div><br>

  <div class="actions">
    <%= f.submit "Send me reset password instructions" %>
  </div></div><br>
<% end %>

<%= render "users/shared/links" %></div><br>
