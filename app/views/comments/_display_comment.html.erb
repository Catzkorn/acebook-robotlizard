<head>
<link rel="stylesheet" href="/assets/iconstyles.css">
</head>

<% post.comments.each do |comment| %>

<%if current_user.id == comment.user.id%>

<div class="comment">
    <h5><a href="/users/<%=comment.user.id%>   "><%= comment.user.first_name %> <%= comment.user.last_name %></a></h5>
    <h6><%= comment.content %></h6>
    <%= comment.created_at.strftime("%d/%m/%Y")%> at <%= comment.created_at.strftime("%k:%M") %><br>
</div>

<%= render :partial => "./comments/comment_edit_delete", locals: { comment_id: comment.id, comment: comment}%> 
        

<%else%>

<div class="comment">
    <h5><a href="/users/<%=comment.user.id%>   "><%= comment.user.first_name %> <%= comment.user.last_name %></a></h5>
    <h6><%= comment.content %></h6>
    <%= comment.created_at.strftime("%d/%m/%Y")%> at <%= comment.created_at.strftime("%k:%M") %><br>
</div>

<%end%>

<%= render :partial => "./likes/comment_like_button", locals: { comment: comment}%> <br>
<% end %>
      </div>

