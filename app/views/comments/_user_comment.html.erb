<%# Displays a users comment %>

<div class='commenter'>
  <a href="/users/<%=comment.user.id%>"><%= comment.user.first_name %> <%= comment.user.last_name %></a><br>
</div>

<div class='message'>
  <%= comment.content %>
</div>

<div class='comment-date'>
  <%= comment.created_at.strftime("%d/%m/%Y")%> at <%= comment.created_at.strftime("%k:%M") %>
</div>