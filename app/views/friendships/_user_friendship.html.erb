<%if user.requested_friends.include?(current_user)%>

<%= link_to unfriend_friendship_path(user_id), method: :put do %> 
        <div class="engagement"> 
        <p> <button type="button" class="badge badge-secondary">Cancel Friend Request<span class="badge"> </span></button> </p>
         </div>
<% end %>

<%elsif !user.friends_with?(current_user)%>
<%= link_to addfriend_friendship_path(user_id), method: :put do %> 
        <div class="engagement"> 
        <p> <button type="button" class="badge badge-secondary">Add Friend <span class="badge"> </span></button> </p>
         </div>
<% end %>

<%else%>
<%= link_to unfriend_friendship_path(user_id), method: :put do %> 
        <div class="engagement"> 
        <p> <button type="button" class="badge badge-secondary">Unfriend <span class="badge"> </span></button> </p>
         </div>
<% end %>
<%end%>